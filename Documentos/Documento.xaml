<Window x:Class="Documentos.Documento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Documentos"
        mc:Ignorable="d"
        Closing="Documento_Closing"
        Title="Documento" Height="450" Width="800" Icon="newDocument_icon.ico" ResizeMode="NoResize">
    <DockPanel>
        <Button x:Name="GuardarButton" DockPanel.Dock="Bottom" Margin="10" Click="GuardarButton_Click">Guardar</Button>
        <TextBox x:Name="DocumentoTextBox" AcceptsReturn="True"></TextBox>
    </DockPanel>
</Window>
